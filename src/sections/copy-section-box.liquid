
<section class="copySection  copySection--right  aboutBoxes">
  <div class="row small-collapse">
    <div class="small-12 medium-11 large-9  medium-centered columns [ grid  grid--justifyCenter ]">

      <div class="copySection-inner">

        <div class="copySection-accent"
                   data-stellar-offset-parent="true"
                   data-stellar-vertical-offset="100"
                   data-stellar-ratio="1.5">
        </div>  

        <div class="row [ grid  grid--flexDirectionColumn  med-grid--flexDirectionRow grid--center ]">
        
          <div class="small-12 columns medium-6 large-6">
            
              <div class="row  small-collapse">
                  
                <div class="small-12 columns medium-12  large-10 large-push-1  [ grid  grid--justifyCenter ]">
                  
                  <div class="copySection-copy"
                       data-stellar-offset-parent="true"
                       data-stellar-vertical-offset="100"
                       data-stellar-ratio="1.3">
              
                     <h1 class="headline  copySection-headline  copySection-headline--secondary">
                      {{section.settings.title}}
                     </h1>

                      <p class="copySection-body">
                        {{section.settings.description}}
                      </p>
                              
                      <div class="row small-collapse">
                        <div class="small-12 columns">
                        <a href="{{section.settings.cta}}" rel="internal" class="button--expanded  button button--primary button--small copySection-button" data-text="{{section.settings.cta_label}}">
                        <span>{{section.settings.cta_label}}</span>
                        </a>
                        </div>
                      </div>
                  </div>
            
                </div>
            
                <div class="small-12 columns medium-6  hide-for-medium-up">
               
                  <div class="copySection-imageContainer">
                      <img src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==" data-size="auto" data-src="{{'home_aboutBox_small.png' | asset_url}}" alt="Whiskers Fiver Box" width="350" class="aboutLaces-slideshow-slide-img  lazyload">
                  </div>
                </div>
              </div>
          </div>
          
          <div class="medium-6  large-6  columns  show-for-medium-up" 
               data-stellar-vertical-offset="100"
               data-stellar-offset-parent="true"
               data-stellar-ratio="1.5">
        
               <div class="row  medium-collapse  large-uncollapse">
                 <div class="small-12 columns">
                      <div class="copySection-imageContainer  [ grid  grid--justifyCenter grid--center ]">
                       <img data-size="auto" src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==" data-src="{{'home_aboutBox_large.png' | asset_url}}" alt="Whiskers Fiver Box" width="350" class="lazyload">
                     </div>
                 </div>
               </div>
            </div>
         </div>
        </div>
      </div>
    </div>
  </div>
</section>



{% schema %}
  {
    "name": "Copy Section Box",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Title for section"
      },
      {
        "type": "richtext",
        "id": "description",
        "label": "Description",
        "default": "<p>About this section</p>"
      },
      {
        "type": "text",
        "id": "cta_label",
        "label": "CTA Label"
      },
      {
        "type": "url",
        "id": "cta",
        "label": "Call to Action"
      }
    ],
    "presets": [
      {
        "name": "Copy Section Box",
        "category": "Copy Section"
      }
    ]
  }
{% endschema %}

