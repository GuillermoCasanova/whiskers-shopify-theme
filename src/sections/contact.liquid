{% schema %}
  {
    "name": "Contact",
    "settings": [
      {
        "type": "html",
        "id": "main_column",
        "label": "Main Content",
        "default": "<p></p>"
      },
      {
        "type": "html",
        "id": "side_column",
        "label": "Side Content",
        "default": "<p></p>"
      }
    ]
  }

{% endschema %}

