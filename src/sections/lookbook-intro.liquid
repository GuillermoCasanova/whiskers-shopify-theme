//<script>
  function lookbookIntro(container) {
    
    var self = this; 
    var animSpeed = .4;   
    var selectors = {
      headline: '[data-headline]', 
      image: '[data-image]',
      paragraph: '[data-body]'
    };

    this.$container = $(container); 
    this.animCtrl = new ScrollMagic.Controller(); 

    //
    // Make selectors inside container visibility normal to prepare for animation
    //
    for(var selector in selectors) {
      TweenMax.set(self.$container.find(selectors[selector]), {autoAlpha: 1});
    }

    //
    // Code to animate the lookbook intro when it enters the page
    //
    this.sectionAnim  = new TimelineMax()
          .from(self.$container.find(selectors.image), animSpeed, {y: '100%'}, '-=.4')
          .from(self.$container.find(selectors.headline), .2, {y: '18px', opacity: 0}, .1)
          .from(self.$container.find(selectors.paragraph), .2, {y: '18px', opacity: 0}, '-=.1');

    this.sectionScene = new ScrollMagic.Scene({
        triggerElement: container, 
        triggerHook: 'onCenter'
    })
    .setTween(this.sectionAnim)
    .addTo(this.animCtrl); 
  }
  
  setTimeout(function() {
    lookbookIntro('[data-lookbook-intro]');
  }, 200);

{% endjavascript %}

