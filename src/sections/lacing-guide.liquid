

<section class="pageHeader" data-section-id="{{ section.id }}" data-section-type="lacing_guide">

<!--Page Header Begins--> 
{% include 'page-header' %}
<!--Page Header Ends--> 

<!-- Lacing Styles--> 
<div>
  <div class="row">
    <div class="small-12  large-10  medium-centered  columns">
      <ul class="lacingGuide  [ grid  grid--flexDirectionColumn  grid--justifyCenter med-grid--justifySpaceAround med-grid--flexDirectionRow  med-grid--1of3  med-grid--justifyLeft  med-grid--flexWrap ]" 
          data-grid>

        {% for block in section.blocks %}
        <li class="grid-cell" data-title="{{block.settings.name}}" data-handle="{{block.settings.handle}}" data-lacing-template="{{block.settings.steps | escape}}">  

          <a class="lacingStyle" title="{{block.settings.name}}" data-title="{{block.settings.name}}" data-lacing-thumb data-lacing-template="{{block.settings.steps | escape}}" >
            <div class="lacingStyle-inner">
             <div class="lacingStyle-img">
              <img src="{{block.settings.thumbnail | img_url: '483x853'}}" alt="{{block.settings.name}}">
             </div>
             <h2 class="lacingStyle-title">
               {{block.settings.name}}
             </h2>
            </div>
          </a>

        </li>
        {% endfor %}

      </ul>
    </div>
  </div>


