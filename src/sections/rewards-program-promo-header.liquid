  $(window).on('load', function() {

    function rewardsProgramPromoHeader(container) {

      var selectors = {
        header: '[data-lookbook-header]', 
        headline: '[data-headline]', 
        body: '[data-body]',
        background: '[data-bg]'
      };

      this.$container = $(container); 

      this.animCtrl = new ScrollMagic.Controller(); 

      var self = this; 

      //
      // Make selectors inside container visibility normal to prepare for animation
      //
      for(var selector in selectors) {
        TweenMax.set(self.$container.find(selectors[selector]), {autoAlpha: 1});
      }
    
      //
      // Code to animate the header when it enters the page
      //
      this.headerAnim  = new TimelineMax()
            .from(self.$container.find(selectors.background), .4, {opacity: 0}, .1)
            .from(self.$container.find(selectors.headline), .4, {opacity: 0, y: '20px'})
            .from(self.$container.find(selectors.body), .4, {opacity: 0, y: '20px'});

      this.headerScene = new ScrollMagic.Scene({
          triggerElement: container, 
          triggerHook: 'onEnter'
      })
      .setTween(this.headerAnim)
      .addTo(this.animCtrl); 
    }
    
    setTimeout(function() {
      rewardsProgramPromoHeader('[data-lookbook-header]');
    }, 200);

  });
