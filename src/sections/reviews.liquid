<article data-section-id="{{ section.id }}" data-section-type="info-page">

  <div class="infoPage">
    <div class="row">
      <div class="small-12  medium-11  large-10  large-centered  columns">
          <div class="row">
            <div class="small-12 medium-7   columns">
              {{section.settings.main_column}}
            </div>
   
            <div class="small-12  medium-5  columns">
              <div class="infoPage-sideContent">{{section.settings.side_column}}</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</article>


