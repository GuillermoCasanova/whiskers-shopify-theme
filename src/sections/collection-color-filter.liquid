
<div class="collection-color-filter">
	<span class="collectionFilters-filter-title">
	{{section.settings.title}}
	</span>
	<ul class="grid  grid--flexWrap grid--flexDirectionRow    grid--justifyLeft  large-grid--1of4">
		{%for block in section.blocks %}
		<li class="grid-cell">
			<div class="colorSwatch" style="background-color: {{block.settings.color-hex}};">
				<label for="{{block.settings.color-hex}}">{{block.settings.title}}</label>
				<input type="checkbox" value="{{block.settings.title}}" name="{{block.settings.color-hex}}" data-filter-option><div class="colorSwatch-check">
					
				</div>
			</div>
		</li>
		{%endfor%}
	</ul>
</div>

{% schema %}
  {
    "name": "Color Swatches Filter",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Filter Title"
      }
    ],
    "blocks": [
      {
        "type": "color-swatch",
        "name": "Color Swatches",
        "settings": [
           {
            "label": "Color Name",
            "id": "title",
            "type": "text"
          },
          {
            "label": "Color",
            "id": "color-hex",
            "type": "color"
          }
        ]
      }
    ]
  }

{% endschema %}
