
<section class="copySection  copySection--right copySection--shoeShowcase">
  <div class="row small-collapse">
    <div class="small-12 medium-11 large-10  medium-centered columns [ grid  grid--justifyCenter ]">
      <div class="copySection-inner">
        
        <div class="copySection-accent"
                   data-stellar-offset-parent="true"
                   data-stellar-vertical-offset="100"
                   data-stellar-ratio="1.5"
                   ng-click="introSection.nextSlide()">
            
            <img src="{{'whiskIcon--rock.svg' | asset_url}}" 
                 alt="">    

        </div>  

        <div class="row">
          <div class="small-12 columns medium-6 large-6">
              <div class="row  small-collapse">
                <div class="small-12 columns medium-12  large-10 large-push-1  [ grid  grid--justifyCenter ]">
                  <div class="copySection-copy"
                       data-stellar-offset-parent="true"
                       data-stellar-vertical-offset="100"
                       data-stellar-ratio="1.3">
              
                    <h1 class="headline  copySection-headline ">
                      {{ section.settings.title | escape }}
                    </h1>
                          
                    <div class="copySection-body">
                      {{ section.settings.column_richtext }}
                    </div>
        
                  </div>
            
                </div>
            
                <div class="small-12 columns medium-6  hide-for-medium-up">
                  <div class="copySection-imageContainer">
                    <div class="shoeShowcase-slideshow grid  grid--justifyCenter"> 
                    
                       <div class="shoeShowcase-slides">
                            <img src="{{'transparent_shoe1.png'  | asset_url }}" 
                              alt="" 
                              class="shoeShowcase-slide" 
                              width="420">
                         
                       </div>
                    </div>
                  </div>
                </div>
              </div>
          </div>
          <div class="medium-6  large-6  columns  show-for-medium-up" 
               data-stellar-vertical-offset="100"
               data-stellar-offset-parent="true"
               data-stellar-ratio="1.5">
        
            <div class="copySection-imageContainer  [ grid  grid--justifyCenter grid--center ]">
              <div class="shoeShowcase-slideshow [ grid  grid--justifyCenter ]"> 
              
                 <div class="shoeShowcase-slides  [ grid  grid--justifyCenter grid--center ]">
                      <img src="{{'transparent_shoe2.png' | asset_url}}" 
                        alt="" 
                        class="shoeShowcase-slide" 
                        width="420">
                 </div>
              </div>
            </div>
         </div>
        </div>
      </div>
    </div>
  </div>
</section>


{% schema %}
  {
    "name": "Copy section",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Title for section"
      },
      {
        "type": "richtext",
        "id": "column_richtext",
        "label": "Description",
        "default": "<p>About this section</p>"
      }
    ],
    "presets": [
      {
        "name": "Default Copy Section",
        "category": "Copy Section"
      }
    ]
  }
{% endschema %}
