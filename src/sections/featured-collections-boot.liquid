
<section class="section" data-section-id="{{ section.id }}" data-section-type="featured-laces-collection">
  <div class="row small-collapse">
    <div class="small-12  medium-11  large-12  medium-centered  columns  ">
    {%for block in section.blocks %}

    {%- assign collection = collections[block.settings.collection] -%}

  <!--Collection Begins--> 
  <div class="section">
    <div class="row small-collapse">
      <div class="small-12  medium-11  large-12  medium-centered  columns  ">

          <div class="grid  grid--justifyCenter">
            <div class="collectionContainer">
              <div class="categoryHeader  show-for-medium-up"> 
                
                <h2 class="categoryHeader-title">{{ collection.title }}</h2>
                
              </div>
                
              <div class="row">
                <div class="small-12 columns">
                  <ul class="grid  
                             grid--flexDirectionRow
                             grid--1of2
                             med-grid--1of3
                             grid--flexWrap
                             med-grid--flexDirectionRow
                             large-grid--1of4
                             productThumbs">
              
                    {% for product in collection.products %}
                    <li class="grid-cell">
                      {%include 'product-thumb'%}
                    </li>
                    {% endfor %}
                  </ul>
                </div>
              </div>
            </div>
          </div>
      </div>
    </div>
  </div>
  <!--Collection Ends--> 


    {% endfor %}
    </div>
  </div>
</section>


{% javascript %}
    //
    // Initializes the AJAX cart properties 
    // <script>
     ajaxCart.init({
        formSelector: '[data-thumb-add-to-cart-form]',
        cartContainer: '#CartContainer',
        addToCartSelector: '[data-thumb-add-to-cart-btn]',
        enableQtySelectors: true,
        moneyFormat: theme.strings.moneyFormat
    });

  //</script>
{% endjavascript %}


{% schema %}
  {
    "name": "Featured Boot Collections",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Featured Boot Collections"
      }
    ],
    "blocks": [
      {
        "type": "collection",
        "name": "Collection",
        "settings": [
          {
            "label": "Collection",
            "id": "collection",
            "type": "collection"
          }
        ]
      }
    ]
  }

{% endschema %}

