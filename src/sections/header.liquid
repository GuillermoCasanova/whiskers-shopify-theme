
<div data-section-id="{{ section.id }}" data-section-type="header">

  <!-- Navigation for small devices--> 
  <header role="banner">

    {% if template.name == 'index' %}
      <h1 itemscope itemtype="http://schema.org/Organization" class="headerLogo grid grid--center grid--justifyCenter   large-grid--justifyLeft">
      {% else %}
        <div class="h1 headerLogo grid grid--center grid--justifyCenter   large-grid--justifyLeft" itemscope itemtype="http://schema.org/Organization">
        {% endif %}
            <a href="/" itemprop="url" >
              <img src="{{'logo--whiskers--badge.svg' | asset_url}}"
                   alt="{{ section.settings.logo.alt | default: shop.name }}"
                   itemprop="logo"
                   class="headerLogo-inner">
            </a>
        {% if template.name == 'index' %}
          </h1>
      {% else %}
        </div>
    {% endif %}

    <nav class="mainNav  grid grid--center  grid--justifyRight" role="navigation">

      <div class="mainNav-title">
  
      </div>


      <div class="mainNav-menuToggleWrapper  grid  grid--center  grid--justifyCenter">
         
         <a href="/cart"  rel="internal" class="cartToggle show-for-medium-up">
              Cart <span class="cartToggle-total">{{cart.item_count}}</span>
         </a>

        <button class="mainNav-menuToggle  grid grid--center "
                data-menu-toggle>
            <span class="menuToggle-label  show-for-medium-up">
               Menu
            </span>

            <span class="menuToggle-icon">
              
            </span>
        </button>
      </div>


      <!-- Off canvas navigation for small devices--> 
      <aside class="mainNav--offCanvas"
             role="navigation"
             data-off-canvas-menu>

         <div class="mainNav-container  grid 
                    grid--flexDirectionColumn 
                    grid--justifySpaceBetween">

            <div>

              <ul class="mainNav-menu ">
                {% for link in linklists[section.settings.main_linklist].links %}
                  {%- assign child_list_handle = link.title | handleize -%}
                  {% if menus[child_list_handle].links != blank %}
                    <li class="mainNav-menu-item">
                      <h1 class="site-nav__link  mainNav-menu-link   mainNav-animElem"
                          data-toggle-id="{{ forloop.index }}"
                          data-drop-down-toggle>
                        {{ link.title }}
                      </h1>
                      <ul class="mainNav-dropDown"
                          data-dropdown-id="{{ forloop.index }}">
                        {% for childlink in menus[child_list_handle].links %}
                          <li class="mainNav-dropDown-item {% if childlink.active %}site-nav--active{% endif %}" >
                            <a href="{{ childlink.url }}" class="mainNav-dropDown-link">{{ childlink.title | escape }}</a>
                          </li>
                        {% endfor %}
                      </ul>
                    </li>
                  {% else %}
                    <li class="mainNav-menu-item  {% if link.active %}site-nav--active{% endif %}">
                      <a href="{{ link.url }}" class="mainNav-menu-link">{{ link.title }}</a>
                    </li>
                  {% endif %}
                {% endfor %}
                <li class="hide-for-medium-up">
                  <a href="/cart"  rel="internal" class="cartToggle hide-for-medium-up">
                        Cart <span class="cartToggle-total">{{cart.item_count}}</span>
                   </a>
                </li>
              </ul>
              
      
              <ul class="[ grid  grid--center  grid--justifyStart ]  [ mainNav-social mainNav-animElem ]">
                 <li>
                   <a href="https://www.instagram.com/humanaut.is/" target="_blank" class="mainNav-social-link   icon-instagram icon--medium  mr1">
              
                   </a> 
                 </li>
                            
                 <li>
                   <a href="https://twitter.com/humanaut?lang=en" target="_blank" class="mainNav-social-link   icon-twitter icon--medium  ml1">
              
                   </a>
                
               </ul>

            </div>

            <div class="mainNav-tagline">
              
              <div class="mainNav-tagline-icon">
                <img src="{{'whiskIcon--iceCream_red.svg' | asset_url}}" alt="">
              </div>

              Tastefully Wrong.

            </div>
           
         </div>

      </aside>
      <!--End off canvas navigation--> 
  
    </nav>
  
  </header>
  <!--End small devices navigation--> 

</div>


{% schema %}
  {
    "name": "Header",
    "settings": [
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo image"
      },
      {
        "type": "range",
        "id": "logo_max_width",
        "min": 50,
        "max": 450,
        "step": 10,
        "unit": "px",
        "label": "Custom logo width",
        "default": 250
      },
      {
        "type": "link_list",
        "id": "main_linklist",
        "label": "Menu",
        "default": "main-menu"
      }
    ]
  }
{% endschema %}
