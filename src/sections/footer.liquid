

<footer>
  <div class="iconWallpaper">
    <img  class="iconWallpaper-img" src="{{'icon_wallpaper.svg' | asset_url}}" alt="" role="presentation">
  </div>

  <div class="footer-inner">
    
    <div class="row">
      
      <div class="small-12 medium-11 large-9 large-push-3  large-uncentered   medium-centered  columns">

        <div class="row">

          <div class="small-12 columns medium-9 large-8">

            <div class="row">

              {% for block in section.blocks %}

                <div class="small-12  medium-4 columns  end">
                {% case block.type %}
                  {% when 'menu' %}
                    <ul class="footer-menu">
                      <h1 class="footer-menu-title">
                          {{ block.settings.menu_title | escape}}
                      </h1>
                      {% for link in linklists[block.settings.menu].links %}
                        <li class="footer-menu-item" >
                          <a href="{{ link.url }}" class="footer-menu-link">{{ link.title | escape }}</a>
                        </li>
                      {% endfor %}
                    </ul>
                    {% else %}
                    
                  <div class="footer-menu">
                    <label class="footer-menu-title">
                        
                        Newsletter
                        
                    </label>
                    
                    <input type="text" 
                           placeholder="Your Email"
                           class="input--small"> 

                    <button class="button--micro  button--tertiary">
                      Sign Up
                    </button>
                  </div>
          
                {% endcase %}
                </div>
              {% endfor %}

            </div>

          </div>
          
          
          <div class="small-12  medium-3 large-4 columns">
                    

          </div>

        </div>

      </div>

      <div class="small-12 large-3  large-pull-9   columns">
                  
        <div class="row">

          <div class="small-11  medium-4  large-11  columns small-centered">

            <div class="footer-logo">
              <img src="{{'logo--whiskers--slogan.svg'  | asset_url}}" 
                   alt="Whiskers Logo">
            </div>

          </div>

        </div>

      </div>

    </div>

    <div class="row">
      
      <div class="small-12  columns text-center  large-text-left">

        <div class="footer-siteCredit">

          <span class="txtc1  ff2 text-mini">
            Tastefully Wrong | {{ 'layout.footer.copyright' | t }} &copy; {{ 'now' | date: "%Y" }}, {{ shop.name | link_to: '/' }}
          </span>
          
        </div>

      </div>

    </div>

  </div>

</footer>

{% schema %}
  {
    "name": "Footer",
    "max_blocks": 4,
    "settings": [
      {
        "type": "checkbox",
        "id": "show_payment_icons",
        "label": "Show payment icons",
        "default": false
      }
    ],
    "blocks": [
      {
        "type": "menu",
        "name": "Footer Section",
        "settings": [
        {
          "id" : "menu_title",
          "type" : "text",
          "label": "Menu Title",
          "default": "Title"
        },
        {
          "id": "menu",
          "type": "link_list",
          "label": "Footer Link List"
        }]
      }
    ]
  }

{% endschema %}
