[
  {
    "name": "theme_info",
    "theme_name": "Slate",
    "theme_version": "0.11.0",
    "theme_author": "Shopify",
    "theme_documentation_url": "https://shopify.github.io/slate/",
    "theme_support_url": "https://github.com/Shopify/slate"
  },
  {
    "name": "Special Promotion Tab",
    "settings": [
      {
        "type": "checkbox",
        "id": "special_promo_active",
        "label": "Special Promotion Activation",
        "info": "This turns on/off the promotion tab on the site"
      },
      {
        "type": "text",
        "id": "special_promo_text",
        "label": "Promotion text that will go in the tab"
      }
    ]
  },
  {
    "name": "Email Pop-up",
    "settings": [
      {
        "type": "checkbox",
        "id": "email_pop_up_active",
        "label": "Email Pop-up Activation",
        "info": "This turns on\/off the email pop-up on the site"
      },
      {
        "type": "text",
        "id": "email_popup_headline",
        "label": "The headline for the pop-up"
      },
      {
        "type": "text",
        "id": "email_popup_body",
        "label": "The body copy for the pop-up"
      },
      {
        "type": "text",
        "id": "email_popup_button_cta",
        "label": "The text inside the button to sign up"
      },
      {
        "type": "text",
        "id": "email_popup_secondary_body",
        "label": "Any secondary text below the button cta"
      },
      {
        "type": "image_picker",
        "id": "image_small",
        "label": "The image that will appear on small devices"
      },
      {
        "type": "image_picker",
        "id": "image_large",
        "label": "The image that will appear on larger devices"
      },
      {
        "type": "select",
        "id": "pop_up_frequency",
        "label": "How often do you wan to show the pop-up?",
        "options": [
          {
            "group": "frequency",
            "value": "first-timers-only",
            "label": "First Time Visitors Only"
          },
          {
            "group": "frequency",
            "value": "everytime-site-loads",
            "label": "Everytime site loads"
          }
        ]
      }
    ]
  },
  {
    "name": "Typography",
    "settings": [
      {
        "type": "select",
        "id": "type_base_size",
        "label": "Base size",
        "default": "16px",
        "options": [
          {
            "value": "14px",
            "label": "14px"
          },
          {
            "value": "15px",
            "label": "15px"
          },
          {
            "value": "16px",
            "label": "16px"
          },
          {
            "value": "17px",
            "label": "17px"
          }
        ]
      }
    ]
  },
  {
    "name": "Colors",
    "settings": [
      {
        "type": "header",
        "content": "General colors"
      },
      {
        "type": "color",
        "id": "color_primary",
        "label": "Primary color",
        "default": "#000",
        "info": "Used for text links, and primary buttons"
      },
      {
        "type": "color",
        "id": "color_body_text",
        "label": "Text color",
        "default": "#000",
        "info": "Color used for content and paragraph text"
      }
    ]
  },
  {
    "name": "Social media",
    "settings": [
      {
        "type": "header",
        "content": "Social sharing options"
      },
      {
        "type": "checkbox",
        "id": "social_sharing_blog",
        "label": "Enable sharing for blog articles",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "share_facebook",
        "label": "Share on Facebook",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "share_twitter",
        "label": "Tweet on Twitter",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "share_pinterest",
        "label": "Pin on Pinterest",
        "default": true
      },
      {
        "type": "header",
        "content": "Sharing links"
      },
      {
        "type": "text",
        "id": "social_twitter_link",
        "label": "Twitter link"
      },
      {
        "type": "text",
        "id": "social_facebook_link",
        "label": "Facebook link"
      },
      {
        "type": "text",
        "id": "social_pinterest_link",
        "label": "Pinterest link"
      },
      {
        "type": "text",
        "id": "social_instagram_link",
        "label": "Instagram link"
      },
      {
        "type": "text",
        "id": "social_snapchat_link",
        "label": "Snapchat link"
      },
      {
        "type": "text",
        "id": "social_tumblr_link",
        "label": "Tumblr link"
      },
      {
        "type": "text",
        "id": "social_youtube_link",
        "label": "Youtube link"
      },
      {
        "type": "text",
        "id": "social_vimeo_link",
        "label": "Vimeo link"
      }
    ]
  },
  {
    "name": "Cart",
    "settings": [
      {
        "type": "checkbox",
        "id": "cart_notes_enable",
        "label": "Enable cart notes",
        "default": true
      }
    ]
  },
  {
    "name": "Favicon",
    "settings": [
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "Favicon image",
        "info": "Will be scaled down to 32 x 32px"
      }
    ]
  }
]
