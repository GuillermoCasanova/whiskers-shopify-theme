{% layout none %}
{% paginate collection.products by 50 %}
{
  "products": [
  {% for product in collection.products %}
	{
    "id": "{{product.id}}", 
    "body_html": "{{product.body_html}}",
    "price": "{{product.variants[0].price}}",
    "images": [{%for image in product.images %} "{{image | img_url: '400x400'}}" {% unless forloop.last %},{% endunless %}{%endfor%}],	
    "secondaryImg": "{{product.images[2] | img_url:'1000x1000'}}",
    "url": "{{product.url}}",
    "handle": "{{product.handle}}",
    "variants": {{product.variants | json }},
  	"available": "{{ product.available }}",
  	"title": "{{ product.title | escape}}",
  	"vendor": "{{ product.vendor }}",
  	"collections": "{{product.collections.first.handle}}",
  	"tags": [{%for tag in product.tags %} "{{tag | replace: '"', ''}}" {% unless forloop.last %},{% endunless %}{%endfor%}],
    "date":
    {%- assign found = false -%}
      {%for tag in product.tags%}
        {%if tag contains 'added-'%}
          "{{tag | replace: 'added-', ''}}"
          {%- assign found = true -%}
          {%break%}
        {%endif%}
      {%endfor%}
      {%if found == false%}
      "today"
      {%endif%}, 
    "color": 
    {%- assign primaryFound = false -%}
    {%for tag in product.tags%}
      {%if tag contains 'primary-color'%}
        "{{tag}}"
        {%- assign primaryFound = true -%}
        {%break%}
      {%endif%}
    {%endfor%}
    {%if primaryFound == false %}
      {%for tag in product.tags%}
        {%if tag contains 'color'%}
          "{{tag}}"
          {%break%}
        {%endif%}
      {%endfor%}
    {%endif%}
	}{% unless forloop.last %},{% endunless %}{% endfor %}
  ]
}
{% endpaginate %}